{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "lib",
    "sourceMap": true
  },
  "types": ["jest"],
  "exclude":[
    "node_modules"
  ],
  "files": [
    "./src/index.ts",
    "./src/extended/index.ts"
  ]
}
